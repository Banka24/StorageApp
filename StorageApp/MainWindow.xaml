<Window x:Class="StorageApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StorageApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="textName" Text="" TextAlignment="Center" Style="{StaticResource TextBlockLarge}" VerticalAlignment="Center" />
        <Button Name="BtnInfIt" Content="информация о товаре" Grid.Row="1" Style="{StaticResource button_small}" Width="200" Visibility="Hidden" Click="BtnInfIt_Click"/>
        <Button Name="BtnGoWork"  Content="начать(закончить) смену" Grid.Row="2" Style="{StaticResource button_small}" Visibility="Hidden" Width="200"/>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Grid.RowSpan="4"/>
    </Grid>
</Window>
