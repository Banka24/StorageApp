<Page x:Class="StorageApp.Editor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StorageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Editor">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Редактор" TextAlignment="Center" Style="{StaticResource TextBlockLarge}" VerticalAlignment="Center" />
        <Button Content="Добавить" Grid.Row="1" Style="{StaticResource button_small}" Width="200" x:Name="BtnAdd" Click="BtnAdd_Click"/>
        <Button Content="Редактировать" Grid.Row="2" Style="{StaticResource button_small}" Width="200" x:Name="BtnEd" Click="BtnEd_Click"/>
        <Button Content="Удалить" Grid.Row="3" Style="{StaticResource button_small}" Width="200" x:Name="BtnDel" Click="BtnDel_Click"/>
        <Button Content="Назад" Grid.Row="4" Style="{StaticResource button_small}" Width="100" HorizontalAlignment="Right" x:Name="BtnBack" Click="BtnBack_Click"/>
    </Grid>
</Page>
