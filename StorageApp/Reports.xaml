<Page x:Class="StorageApp.Reports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reports">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Отчеты" TextAlignment="Center" Style="{StaticResource TextBlockLarge}" VerticalAlignment="Center" />
        <Button Content="Отчеты о товарах" Grid.Row="1" Style="{StaticResource ButtonSmall}" Width="200" x:Name="BtnIt" Click="BtnIt_Click"/>
        <Button Content="Отчеты о персонале" Grid.Row="2" Style="{StaticResource ButtonSmall}" Width="200" x:Name="BtnWo" Click="BtnWo_Click"/>
        <Button Content="Назад" Grid.Row="3" Style="{StaticResource ButtonSmall}" Width="100" HorizontalAlignment="Right" x:Name="BtnBack" Click="BtnBack_Click"/>
    </Grid>
</Page>
