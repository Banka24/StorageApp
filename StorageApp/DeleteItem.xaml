<Page x:Class="StorageApp.DeleteItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StorageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeleteItem">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <TextBlock Text="удаление продукта" HorizontalAlignment="Center" VerticalAlignment="Bottom" Style="{StaticResource TextBlockLarge}"/>
        <TextBlock Text="уникальный ID:" Grid.Row="1" Style="{StaticResource TextBlockSmall}" Margin="150,65,555,60"/>
        <TextBox Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource TextBox_Small}" Margin="250,50,250,60"/>
        <Button Content="удалить" Grid.Row="2" Style="{StaticResource button_small}" Margin="230,50,460,50"/>
        <Button Content="выход" Grid.Row="2" Style="{StaticResource button_small}" Margin="460,50,230,50"/>
    </Grid>
</Page>
